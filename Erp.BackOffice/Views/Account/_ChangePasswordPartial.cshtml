@model Erp.BackOffice.Models.LocalPasswordModel

@using Erp.BackOffice.Helpers

@using (Html.BeginForm_AceStyle(@Resources.Wording.ChangePassword, "Manage", "User", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    //@Html.ValidationSummary()

    <div class="control-group">
        @Html.LabelFor(model => model.OldPassword, new { @class="control-label"})

        <div class="controls">
            @Html.PasswordFor(model => model.OldPassword)<br />
            @Html.ValidationMessageFor(model => model.OldPassword,null,new { @class = "help-inline" })
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(model => model.NewPassword,new { @class="control-label"})

        <div class="controls">
            @Html.PasswordFor(model => model.NewPassword)<br />
            @Html.ValidationMessageFor(model => model.NewPassword,null,new { @class = "help-inline" })
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(model => model.ConfirmPassword,new { @class="control-label"})

        <div class="controls">
            @Html.PasswordFor(model => model.ConfirmPassword)<br />
            @Html.ValidationMessageFor(model => model.ConfirmPassword,null,new { @class = "help-inline" })
        </div>
    </div>
    
    <div class="row-fluid wizard-actions span4">
        <button type="submit" class="btn btn-info" name="Submit" value="Save">
            <i class="ace-icon fa fa-check bigger-110"></i>
            @Resources.Wording.Save
        </button>			
    </div>
}
