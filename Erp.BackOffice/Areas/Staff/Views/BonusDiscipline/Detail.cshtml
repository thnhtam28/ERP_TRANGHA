@using Erp.BackOffice.App_GlobalResources
@using Erp.BackOffice.Helpers
@using Erp.BackOffice.Staff.Models
@model BonusDisciplineViewModel

@{
    ViewBag.Title = Wording.PageDetail_BonusDiscipline;

    Layout = "~/Views/Shared/" + (Request["IsPopup"] == null ? "ACE_AdminLayout.cshtml" : "_PopupLayout.cshtml");
    Erp.BackOffice.Models.PageSetting pageSetting = new Erp.BackOffice.Models.PageSetting
    {
        ModuleName = "BonusDiscipline",
        ActionName = "Detail",
        PageTitle = ViewBag.Title,
        DisplaySearchPanel = false,
        IsPopup = false,
        DisplayBackButton = false

    };
}

@using (Html.BeginPageHeaderContainer(pageSetting))
{

}

<div class="row" style="text-align:center">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-body">
                <div class="widget-main" style="background: #f7f7f7;">
                    <div class="row">
                        <div class="col-sm-5">
                            <img id="avatar" alt="@Model.Name" src="@(Erp.BackOffice.Helpers.Common.KiemTraTonTaiHinhAnh(Model.ProfileImage,"Staff","user"))" style="width:130px;height:130px;border-radius:100%;border:1px solid #ccc" />
                        </div>
                        <div class="col-sm-7">
                            <div style="color:#337ab7;border-bottom:3px solid" class="top-20"><h3><b>@Model.Name</b></h3></div>
                            <div style="color:#337ab7">@(Model.Birthday.HasValue ? Model.Birthday.Value.ToString("dd-MM-yyyy") : "")</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row top-10">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h5 class="widget-title">Thông tin khen thưởng/kỷ luật</h5>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <div class="detail-view">
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.Code, "Code", "Mã quyết định", null, null,"col-xs-4","col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.DayDecision, "DayDecision", "Ngày quyết định", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.DayEffective, "DayEffective", "Ngày hiệu lực", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.PlaceDecisionsName, "PlaceDecisionsName", "Nơi ra quyết định", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.Formality, "Formality", "Hình thức", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.Reason, "Reason", "Lý do", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Common.PhanCachHangNgan2(Model.Money), "Money", "Số tiền", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.Note, "Note", "Ghi chú", null, null, "col-xs-4", "col-xs-8")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



