    function Delete(id) {
        if (confirm('Bạn có chắc muốn xóa các item đã chọn ?')) {
            ShowLoading();
            $.post("@Url.Action("DeleteTask", "Task", new { area = "Crm" })", { id: id })
        .done(function (data) {
            if (data == "success") {
                $("#item_" + id).closest('div').remove();
            }
