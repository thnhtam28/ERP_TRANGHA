                                <div class="clearfix">
                                    <textarea class="ckeditor" cols="30" id="Content" name="Content" placeholder="" rows="2">@Model.Content</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane clearfix" id="tab2">
