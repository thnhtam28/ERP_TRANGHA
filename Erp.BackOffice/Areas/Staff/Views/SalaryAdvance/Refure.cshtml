@using Erp.BackOffice.App_GlobalResources
@using Erp.BackOffice.Helpers
@using Erp.BackOffice.Staff.Models

@model  SalaryAdvanceViewModel

@{
    ViewBag.Title ="Từ chối yêu cầu tạm ứng lương";

    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    Erp.BackOffice.Models.PageSetting pageSetting = new Erp.BackOffice.Models.PageSetting
    {
        ModuleName = "SalaryAdvance",
        ActionName = "Refure",
        PageTitle = ViewBag.Title,
        DisplaySearchPanel = false,
        IsPopup = false,
        DisplayBackButton = true
    };
}

@section HeadOfPage {
    @Html.ScriptTop_ChosenStyle()
}
@using (Html.BeginPageHeaderContainer(pageSetting))
{

}
@using (Html.BeginForm_AceStyle((string)ViewBag.Title, "Refure", "SalaryAdvance", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Pay)
    @Html.HiddenFor(model => model.StaffId)
    @Html.CustomTextAreaFor(model => model.Note, null, WidthType.span12)
    using (Html.BeginButtonContainer(pageSetting))
    {
        <button class="btn btn-mini btn-primary" type="submit" name="Submit" value="Save" onclick="return ClosePopupAndDoSomething();">
            <i class="ace-icon fa fa-save"></i>
            @Wording.SaveAndSend
        </button>
    }
}

@section Scripts {
    <script>
    function ClosePopupAndDoSomething() {
        ClosePopup(true);

    }
</script>
    @Html.ScriptBottom_ValidationMvc()
    @Html.ScriptBottom_DatePicker("dd/mm/yyyy")
    @Html.ScriptBottom_ChosenStyle()
}
