                        <div class="row control-group">
                            @Html.DetailViewItem(Model.BranchNameOld, "BranchNameOld", "Chi nhánh", null, null, "col-xs-4", "col-xs-8")
                        </div>
                        <div class="row control-group">
                            @Html.DetailViewItem(Model.Staff_DepartmentOld, "Staff_DepartmentOld", "Phòng ban", null, null, "col-xs-4", "col-xs-8")
