        $.ajax({
            type: "POST",
            url: '@Url.Action("KETHUA", "BH_DOANHSO", new { KH_BANHANG_DOANHSO_ID = @ViewBag.ID_ORLANEPARIS })',
            contentType: "application/json; charset=utf-8",
