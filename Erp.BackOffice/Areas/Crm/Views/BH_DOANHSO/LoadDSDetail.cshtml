                                    <input class="NGAY_MUA" type="hidden" id="CRM_BH_DOANHSO_CTList_@(i)__NGAY_MUA" name="CRM_BH_DOANHSO_CTList[@(i)].NGAY_MUA" value="@Model.CRM_BH_DOANHSO_CTList[i].NGAY_MUA" readonly="readonly" />
                                    <span style="color: #ff0000; text-decoration: underline;">(@Model.CRM_BH_DOANHSO_CTList[i].NGAY_MUA)</span>
                                </td>

                                <td>
                                    <input class="TONG_TIEN" type="hidden" id="CRM_BH_DOANHSO_CTList_@(i)__TONG_TIEN" name="CRM_BH_DOANHSO_CTList[@(i)].TONG_TIEN" value="@Model.CRM_BH_DOANHSO_CTList[i].TONG_TIEN" readonly="readonly" />
