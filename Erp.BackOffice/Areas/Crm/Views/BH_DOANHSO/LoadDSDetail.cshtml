@model Erp.BackOffice.Crm.Models.CRM_BH_DOANHSOViewModel
@using Erp.BackOffice.Account.Models
@using Erp.BackOffice.Crm.Models
@using Erp.BackOffice.Areas.Cms.Models
@using Erp.BackOffice.App_GlobalResources
@using Erp.BackOffice.Sale.Models
@using Erp.BackOffice.Helpers
@using GridMvc.Html
@{
    int index = 1;
    IEnumerable<CRM_BH_DOANHSO_CTViewModel> vwCRM_BH_DOANHSO_CT = (IEnumerable<CRM_BH_DOANHSO_CTViewModel>)ViewBag.vwCRM_BH_DOANHSO_CT;
    IEnumerable<KH_TUONGTACViewModel> LICHSUTUONGTAC = (IEnumerable<KH_TUONGTACViewModel>)ViewBag.LICHSUTUONGTAC;
    string Month = Request["month"] != null ? Request["month"] : new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day).ToString("MM/yyyy");
    string Year = Request["year"] != null ? Request["year"] : new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day).ToString("MM/yyyy");
    decimal? sum = 0;
}

@helper GridColumnCommand(int? KH_BANHANG_DOANHSO_ID)
{
    <p>
        <button id="Delete" name="Delete" value="Delete" type="submit" class="btn btn-mini btn-danger">
            <i class="ace-icon fa fa-trash bigger-120"></i>
        </button>
    </p>

}
@helper CheckDeleteColumns(int? KH_BANHANG_DOANHSO_ID)
{
    <label>
        <input class="ace class-delete-all" type="checkbox" name="DeleteId-checkbox" value="@KH_BANHANG_DOANHSO_ID">
        <span class="lbl"></span>
    </label>
}
<div class="tab-content clear-fix">
    @Html.HiddenFor(model => model.ID_ANNAYAKE)
    <p>
        <label>Tháng/năm</label>
        @Html.TextBox("month", Request["month"] != null ? Request["month"] : new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day).ToString("MM/yyyy"), new { autocomplete = "off", style = "width:110px", disabled = "true" })
        &nbsp;
        <label>Người lập</label>
        @Html.TextBox("NGUOILAP_ID", Request["NGUOILAP_ID"], new { @class = "hidden", autocomplete = "off", placeholder = "Người lập", style = "width:120px" })

        @Html.TextBox("FullName", Request["FullName"], new { @class = "", disabled = "disabled", autocomplete = "off", placeholder = "Người lập", style = "width:120px" })
        &nbsp;
        <label>Nhãn hàng</label>
        <input type="text" name="CountForBrand" value="ANNAYAKE" style="width:200px" readonly="readonly" />
    </p>
    <p>
        <label>Taget(VNĐ)</label>
        @*<input type="text" name="TGANNAYAKE" id="TGANNAYAKE" value="@CommonSatic.ToCurrencyStr(ViewBag.ANNAYAKE,null)" style="width:120px" />*@
        @Html.TextBox("TARGET_BRAND", Request["TARGET_BRAND"], new { @class = "TARGET_BRAND numberinput2", autocomplete = "off", placeholder = "TARGET", style = "width:120px" })
        &nbsp;
        <label>Kế hoạch đã lập</label>
        <input type="text" name="TotalAmount" id="TotalAmount" style="width:200px" readonly="readonly" />
        &nbsp;
        <label>Đạt (%)</label>
        <input type="text" name="DATKH" id="DATKH" style="width:200px" readonly="readonly" />
    </p>
    <p>
        <label>Ghi chú</label>
        <input type="text" name="GHICHU_ANNAYAKE" class="GHICHU_ANNAYAKE" value="@ViewBag.GHICHU_ANNAYAKE" style="width:400px" />
        @if (@ViewBag.ID_ANNAYAKE == null)
        {
            <a class="btn btn-mini" onclick="OpenPopup('@Url.Action("Create","BH_DOANHSO", new {CountForBrand="ANNAYAKE", id = Model.NGUOILAP_ID })','',0,0)">
                Lập kế hoạch mới
            </a>
        }
        else
        {
            <a class="btn btn-mini" onclick="OpenPopup('@Url.Action("CreateKH", "BH_DOANHSO",new { KH_BANHANG_DOANHSO_ID=@ViewBag.ID_ANNAYAKE, item_origin = "ANNAYAKE"})','',0,0)">
                Thêm mới Đơn hàng
            </a>
        }
        <a id="btnKETHUA11" class="btn btn-mini btn-primary">
            Kế thừa tháng trước
        </a>
    </p>
    <div id="listOrderDetail" class="table-responsive top-10 ">
        <table id="CTable" class="table table-bordered">
            <thead>
                <tr>
                    <th rowspan="2" style="width:40px;text-align:center">STT</th>
                    <th rowspan="2" style="text-align:center">Tên KH</th>
                    <th rowspan="2" style="text-align:center">Mã KH</th>
                    <th rowspan="2" style="text-align:center">Điện thoại</th>
                    <th colspan="4" style="text-align:center">Đơn hàng </th>
                    <th rowspan="2" style="width: 150px; text-align: center">Tỷ lệ thành công(%)</th>
                    <th rowspan="2" style="text-align:center">Ghi chú</th>
                    <th rowspan="2" style="text-align:center">Có đơn hàng</th>
                    <th rowspan="2" style="width: 150px; text-align: center">Đánh giá lại(%)</th>
                    <th rowspan="2" style="text-align:center">Lịch sử tương tác</th>
                    <th rowspan="2" style="text-align:center"></th>
                </tr>

                <tr>
                    <th style="text-align:center">Đơn hàng</th>
                    <th style="text-align:center">Số tiền</th>
                    <th style="text-align:center">Đã trả</th>
                    <th style="text-align:center">Còn lại</th>
                </tr>
            </thead>
            <tbody class="productInvoiceList">
                @if (Model.CRM_BH_DOANHSO_CTList.Count > 0)
                {
                    int w = 0;
                    for (int i = 0; i < Model.CRM_BH_DOANHSO_CTList.Count(); i++)
                    {

                        if (Model.CRM_BH_DOANHSO_CTList[i].KH_BANHANG_DOANHSO_ID == @ViewBag.ID_ANNAYAKE)
                        {
                            <tr role="@(i+1)" id="@(i+1)">
                                <td class="text-center">
                                    @(w += 1)
                                </td>
                                <td>
                                    <input class="KH_BANHANG_DOANHSO_CTIET_ID" type="hidden" id="CRM_BH_DOANHSO_CTList_@(i)__KH_BANHANG_DOANHSO_CTIET_ID" name="CRM_BH_DOANHSO_CTList[@(i)].KH_BANHANG_DOANHSO_CTIET_ID" value="@Model.CRM_BH_DOANHSO_CTList[i].KH_BANHANG_DOANHSO_CTIET_ID" />
                                    <input class="KHACHHANG_ID" type="hidden" id="CRM_BH_DOANHSO_CTList_@(i)__KHACHHANG_ID" name="CRM_BH_DOANHSO_CTList[@(i)].KHACHHANG_ID" value="@Model.CRM_BH_DOANHSO_CTList[i].KHACHHANG_ID" />
