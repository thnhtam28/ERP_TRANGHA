@using Erp.BackOffice.App_GlobalResources
@using Erp.BackOffice.Helpers
@using Erp.BackOffice.Account.Models

@model CustomerViewModel

@{
    ViewBag.Title = "Chụp hình khách hàng: " + Model.CompanyName;
    Layout = "~/Views/Shared/ACE_ClientLayout.cshtml";

    Erp.BackOffice.Models.PageSetting pageSetting = new Erp.BackOffice.Models.PageSetting
    {
        ModuleName = "Customer",
        ActionName = "ProfileImage",
        PageTitle = ViewBag.Title,
        DisplaySearchPanel = false,
        IsPopup = false,
        DisplayBackButton = true,
        AdvancedSearch = false,
    };
}

@section HeadOfPage {
    <link href="/assets/css/cropper.min.css" rel="stylesheet" />
    @Html.ScriptTop_ChosenStyle()
    <style>
        audio,
        video {
            -moz-transition: all 1s ease;
            -ms-transition: all 1s ease;
            -o-transition: all 1s ease;
            -webkit-transition: all 1s ease;
            transition: all 1s ease;
            vertical-align: top;
            width: 100%;
            margin: 0 auto;
            height: 100%;
        }

        @@media screen and (min-width: 768px) {
            video {
                margin: 0 auto;
            }
        }

        #video-container {
            background: white;
            border: 1px solid #999;
            border-radius: 4px;
            display: inline-block;
            padding: 1px;
            vertical-align: top;
        }

        .takeSnapshot,
        .takeSnapshot:hover,
        .takeSnapshot:active {
            background-color: transparent;
            background-image: url('data:image/png;base64,') !important;
            background-position: center center !important;
            background-repeat: no-repeat !important;
            height: 44px;
            margin: .2em;
            position: absolute;
            width: 63px;
            z-index: 200;
            border: 0;
            cursor: pointer;
        }

        #snapshots-container canvas {
            max-width: 100%;
        }

        .container {
            max-width: 720px;
            margin: 20px auto;
        }

        img {
            max-width: 100%;
        }
        .fa-150 {
    font-size: 1.5em;
}
    </style>

}
@if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage != "")
{
    <div class="alert alert-block alert-success">
        <button class="close" data-dismiss="alert" type="button">
            <i class="ace-icon fa fa-times"></i>
        </button>
        <i class="ace-icon fa fa-check green"></i>
        @ViewBag.SuccessMessage
    </div>
}

@if (ViewBag.FailedMessage != null && ViewBag.FailedMessage != "")
{
    <div class="alert alert-block alert-danger">
        <button class="close" data-dismiss="alert" type="button">
            <i class="ace-icon fa fa-times"></i>
        </button>
        <i class="ace-icon fa fa-warning red"></i>
        @ViewBag.FailedMessage
    </div>
}

