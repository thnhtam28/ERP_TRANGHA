                erpHub.server.loadUrl('/Customer/Camera/?Id=@(Model.Id)&ConnectionID=@(ConnectionID)',@ViewBag.UserId);
            });
        });
    </script>
    @Html.ScriptBottom_ValidationMvc()
    @Html.ScriptBottom_DatePicker("dd/MM/yyyy")
}