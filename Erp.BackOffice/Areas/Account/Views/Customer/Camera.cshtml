@section HeadOfPage {
    <style>
        audio,
        video {
            -moz-transition: all 1s ease;
            -ms-transition: all 1s ease;
            -o-transition: all 1s ease;
            -webkit-transition: all 1s ease;
            transition: all 1s ease;
            vertical-align: top;
            /*width: 100%;*/
            margin: 0 auto;
            /*height:100%;*/
        }

        #video-container {
            background: white;
            border: 1px solid #999;
            border-radius: 4px;
            display: inline-block;
            padding: 1px;
            vertical-align: top;
        }

        .takeSnapshot,
        .takeSnapshot:hover,
        .takeSnapshot:active {
            background-color: transparent;
            background-image: url('data:image/png;base64,') !important;
            background-position: center center !important;
            background-repeat: no-repeat !important;
            height: 44px;
            margin: .2em;
            position: absolute;
            width: 63px;
            z-index: 200;
            border: 0;
            cursor: pointer;
        }

        #snapshots-container img {
            width: 100px;
        }
    </style>
}

