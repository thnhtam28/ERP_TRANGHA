@model Erp.BackOffice.Sale.Models.UsingServiceLogDetailViewModel

@using Erp.BackOffice.App_GlobalResources
@using Erp.BackOffice.Account.Models
@using Erp.BackOffice.Helpers
@using Erp.Domain.Account.Entities
@using Erp.Domain.Sale.Entities
@using GridMvc.Html

@{

    Layout = "~/Views/Shared/ACE_ClientLayout.cshtml";
    ViewBag.Title = "Chụp hình khách hàng sử dụng dịch vụ (tái khám)";
    Erp.BackOffice.Models.PageSetting pageSetting = new Erp.BackOffice.Models.PageSetting
    {
        ModuleName = "Customer",
        ActionName = "CameraUsingService",
        PageTitle = ViewBag.Title,
        DisplaySearchPanel = false,
        IsPopup = false,
        DisplayBackButton = false
    };
    //CustomerViewModel customer = (CustomerViewModel)ViewBag.Customer();
    //var ConnectionID = Erp.BackOffice.Hubs.ErpHub.StaffClients.Where(x => x.UserLoggedId == Erp.BackOffice.Helpers.Common.CurrentUser.Id).FirstOrDefault().ConnectionID;
}
<style>
    .fa-150 {
        font-size: 1.5em;
    }
</style>

@using (Html.BeginPageHeaderContainer(pageSetting))
{

}

@if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage != "")
{
    <div class="alert alert-block alert-success">
        <button class="close" data-dismiss="alert" type="button">
            <i class="ace-icon fa fa-times"></i>
        </button>
        <i class="ace-icon fa fa-check green"></i>
        @ViewBag.SuccessMessage
    </div>
}

@if (ViewBag.FailedMessage != null && ViewBag.FailedMessage != "")
{
    <div class="alert alert-block alert-danger">
        <button class="close" data-dismiss="alert" type="button">
            <i class="ace-icon fa fa-times"></i>
        </button>
        <i class="ace-icon fa fa-warning red"></i>
        @ViewBag.FailedMessage
    </div>
}

<div class="row">
    <div class="col-sm-6">
@using (Html.BeginForm("CameraUsingService", "Customer", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.Id)
        <div class="widget-box" style="text-align:center">
            <div class="widget-body">
                <div class="widget-main" style="background: #f7f7f7;">
                    <div class="row">
                        <div class="col-sm-5">
                            <img id="avatar" alt="@Model.Name" src="@(Erp.BackOffice.Helpers.Common.KiemTraTonTaiHinhAnh(Model.CustomerImage, "Customer", "user"))" style="width:130px;height:130px;border-radius:100%;border:1px solid #ccc" />
                        </div>
                        <div class="col-sm-7">
                            <div style="color:#337ab7;border-bottom:3px solid" class="top-20"><h3><b>@Model.CustomerName</b></h3></div>
                            <div style="color:#337ab7">@Model.CustomerCode</div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="detail-view">
            <div class="row control-group">
                <div class="col-xs-4 control-label"><label>Trạng thái</label></div>
                <div class="col-xs-8 control-value" style="">@if (Model.Type == "usedservice")
                {
                    <span class="label label-yellow">Sử dụng dịch vụ</span>
                }
                else
                {
                    <span class="label label-success">Tái khám</span>
                }</div>
            </div>
            <div class="row control-group">
                @Html.DetailViewItem(Model.ServiceName, "ServiceName", Wording.Service, null, null, "col-xs-4", "col-xs-8")
            </div>
            <div class="row control-group">
                @Html.DetailViewItem(Model.CreatedDate.Value.ToString("dd/MM/yyyy HH:mm"), "CreatedDate", Wording.CreatedDate, null, null, "col-xs-4", "col-xs-8")
            </div>
           
            <div class="row control-group">
                @Html.DetailViewItem(Model.Name, "Name", Wording.NameStaff, null, null, "col-xs-4", "col-xs-8")
            </div>
            <div class="row control-group">
                @Html.DetailViewItem(Model.Status, "Status", Wording.StatusQuo, null, null, "col-xs-4", "col-xs-8")
            </div>
        </div>
    @*using (Html.BeginButtonContainer(pageSetting))
    {
        <button class="btn btn-mini btn-primary" type="submit" name="Submit" value="Save" style="border-radius:100%;width:37px;height:37px;line-height:2.3!important">
            <i class="ace-icon fa fa-save"></i>
        </button>
    }*@
    <div class="row">
        <footer class="btn-default">
            <div class="row">
                <div class="col-xs-4">
                    <a title="Trở về trang trước" class="btn btn-white btn-default btn-sm" href="@Url.Action("ClientListUsingService", pageSetting.ModuleName)" style="border-radius:100%;width:37px;height:37px;line-height:2.5!important">
                        <i class="ace-icon fa-150 fa fa-arrow-left"></i>
                    </a>
                </div>
                <div class="col-xs-4" style="text-align:center">
                    <button title="Lưu danh sách ảnh" type="submit" name="Submit" value="Save" class="btn btn-white btn-primary btn-sm" style="border-radius:100%;width:37px;height:37px;line-height:2.5!important">
                        <i class="ace-icon fa-150 fa fa-save"></i>
                    </button>
                </div>
                <div class="col-xs-4" style="text-align:right">
                    @if (Model.IsVote == null || Model.IsVote == false)
                    {
                        <a class="btn btn-white btn-success btn-sm" href="@Url.Action("Create","Vote", new { area = "Crm", CustomerId = Model.CustomerId, InvoiceId = Model.ProductInvoiceId, UsingServiceLogDetailId =Model.Id})" title="Mở form Khách hàng đánh giá khi tái khám/sử dụng dịch vụ" style="border-radius:100%;width:37px;height:37px;line-height:2.5!important">
                            <i class="ace-icon fa-150 fa fa-commenting"></i>
                        </a>
                    }
                </div>
            </div>
        </footer>
    </div>
}
    </div>
    <div class="col-sm-6">
        @Html.Partial("_CameraFileInput")
    </div>
</div>


