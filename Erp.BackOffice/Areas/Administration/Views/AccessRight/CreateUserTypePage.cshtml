@using Erp.BackOffice.Helpers

@{
    ViewBag.Title = "Quyền truy cập - Loại user - Trang";
    Layout = "~/Views/Shared/ACE_AdminLayout.cshtml";
}

@if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage != "")
{
    <div class="alert alert-block alert-success">
        <button class="close" data-dismiss="alert" type="button">
            <i class="icon-remove"></i>
        </button>
        <i class="ace-icon fa fa-check green"></i>
        @ViewBag.SuccessMessage
    </div>
}

<div class="page-header">
    <h1>Phân quyền cho role</h1>
</div>

@using (Html.BeginForm("CreateUserTypePage", "AccessRight", null, FormMethod.Post, new { id = "accessRight", @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="col-sm-3 text-right">ID Loại người dùng</label>
        <div class="col-sm-9">
            <input name="UserTypeId" class="form-control" placeholder="UserTypeId" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 text-right">ID Trang muốn xem</label>
        <div class="col-sm-9">
            <input name="PageId" class="form-control" placeholder="PageId" />
        </div>
    </div>
    <div class="clearfix">
        <button type="submit" class="btn btn-info" name="Submit" value="Save" id="btnSave">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Lưu
        </button>
    </div>
}
