@section Scripts {

    <script src="/Scripts/ckeditor/ckeditor.js"></script>
    <script src="/Scripts/combojaxTLT.js?=vs1.01"></script>

    <script>
        function SetTextForId(ele, strName) {
            var a = $(ele).closest('div .control-group');
            a.find('label').html(strName);
        }
        $(document).ready(function () {
            LoadNumberInput();
            SetTextForId($('#Code'), "Mã túi liệu trình");
            SetTextForId($('#Name'), "Tên túi liệu trình");
            SetTextForId($('#ProductGroup'), "Nhóm");
            SetTextForId($('#CategoryCode'), "Danh mục");
            SetTextForId($('#ProductLinkName'), "Túi liệu trình liên kết");

            $("#ProductLinkName").combojax({
                url: "/Product/GetListProductPackage",
                onNotFound: function (p) {  //khi tìm ko thấy dữ liệu thì sẽ hiển thị khung thêm mới dữ liệu
                    //OpenPopup('/Customer/Create?IsPopup=true&Phone=' + p, 'Thêm mới', 500, 250);
                },
                onSelected: function (obj) {
                    console.log(obj);
                    if (obj) {
                        $("#ProductLinkId").val(obj.Id);
                    }
                }       //chỗ xử lý khi chọn 1 dòng dữ liệu ngoài việc lưu vào textbox tìm kiếm
              ,onShowImage: false                  //hiển thị hình ảnh
              ,onSearchSaveSelectedItem: true    //lưu dòng dữ liệu đã chọn vào ô textbox tìm kiếm, mặc định lưu giá trị value trong hàm get data
              ,onRemoveSelected: false  //những dòng đã chọn rồi thì sẽ ko hiển thị ở lần chọn tiếp theo
            });

            $('#Save').click(function () {
                ShowLoading();
                ClearFormatBeforeSubmit($("#CreateProduct"));
                $("#CreateProduct").submit();
                // HideLoading();
            });

            $("#Code").change(function () {
                $.get('/Product/CheckCodeExsist/', { id: @Model.Id, code: $(this).val() }, function (rs) {
                    if (rs != '') {
                        alert(rs);
                    }
                });
            });

        });

        function initCkeditor() {
            $('.ckeditor').ckeditor({
                "extraPlugins": 'imagebrowser',
                "imageBrowser_listUrl": "@Url.Action("ListJson","Images")",
                // Define the toolbar groups as it is a more accessible solution.
                toolbarGroups: [
                    { "name": "document", "groups": ["mode", "document", "doctools"] },
                    { "name": "editing", "groups": ["find", "selection", "spellchecker"] },
                    { "name": "forms" },
                    { "name": "tools" },
                    { "name": "basicstyles", "groups": ["basicstyles", "cleanup"] },
                    { "name": "clipboard", "groups": ["clipboar", "undo"] },
                    { "name": "links", "groups": ["links"] },
                    { "name": "paragraph", "groups": ["list", "blocks"] },
                    { "name": "insert", "groups": ["insert"] },
                    { "name": "styles", "groups": ["styles"] },
                    //{ "name": "about", "groups": ["about"] },
                    { "name": "styles" },
                    { "name": "colors" },
                    { "name": "align", "groups": ['JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock'] }

                ],
                // Remove the redundant buttons from toolbar groups defined above.
                removeButtons: 'Underline,Strike,Subscript,Superscript,Anchor,Styles,Specialchar'
            });
        }

        var $tr_template = $('#detailList tr:first-child');
        //truyền từ action create của controller qua khi thực hiện submit và return về lại view create, để nhận biết là được gọi theo dạng popup
        var closePopup = '@ViewBag.closePopup';
        $(document).ready(function () {
            //nếu là được gọi theo dạng popup từ form khác thì chạy đoạn code bên dưới
            if (closePopup != '') {
                var option = '<option value="@Model.Id" >@Model.Name</option>';
                //tên funtion có thể khác theo từng công việc riêng (đây chỉ là mẫu khi thêm mới sẽ gọi lại)
                window.parent.ClosePopupAndAppendSelect(option);
            }

            $('.btn-add-detail-item').click(function () {

                var len = $('#detailList tr').length;
                var tr_new = $tr_template.clone()[0].outerHTML;
                tr_new = tr_new.replace(/\[0\]/g, "[" + len + "]");
                tr_new = tr_new.replace(/\_0\__/g, "_" + len + "__");
                var $tr_new = $(tr_new);
                $tr_new.attr('role', len);
                $tr_new.find('td:first-child').text(len);
                $tr_new.find('.detail_material_id').val(0);
                $tr_new.find('.detail_id').val(0);
                $tr_new.find('.detail_material_name').text('');
                //$tr_new.find('.detail_quantity').text('');
                $('#detailList').append($tr_new);
                var $tr_after_append = $('tr[role="' + len + '"]');
                $tr_after_append.removeAttr("hidden", "hidden");

                $("#ProductDetailList_"+len+"__MaterialName").combojax({
                    url: "/Material/GetListMaterial",
                    onNotFound: function (p) {  //khi tìm ko thấy dữ liệu thì sẽ hiển thị khung thêm mới dữ liệu
                        //OpenPopup('/Customer/Create?IsPopup=true&Phone=' + p, 'Thêm mới', 500, 250);
                    },
                    onSelected: function (obj) {
                        console.log(obj);
                        if (obj) {
                            $("#ProductDetailList_"+len+"__MaterialId").val(obj.Id);
                        }
                    }       //chỗ xử lý khi chọn 1 dòng dữ liệu ngoài việc lưu vào textbox tìm kiếm
               ,onShowImage: false                  //hiển thị hình ảnh
               ,onSearchSaveSelectedItem: true    //lưu dòng dữ liệu đã chọn vào ô textbox tìm kiếm, mặc định lưu giá trị value trong hàm get data
               ,onRemoveSelected: false  //những dòng đã chọn rồi thì sẽ ko hiển thị ở lần chọn tiếp theo
                });

            });
            // xóa sản phẩm
            $('#detailList').on('click', '.detail_remove', function () {
                $(this).closest('tr').remove();
                $('#detailList tr').each(function (index, tr) {
                    $(tr).attr('role', index);
                    $(tr).find('td:first-child').text(index);
                    $(tr).find('.detail_material_id').attr('name', 'ProductDetailList[' + index + '].MaterialId').attr('id', 'ProductDetailList_' + index + '__MaterialId');
                    $(tr).find('.detail_id').attr('name', 'ProductDetailList[' + index + '].Id').attr('id', 'ProductDetailList_' + index + '__Id');
                    $(tr).find('.detail_material_name').attr('name', 'ProductDetailList[' + index + '].MaterialName').attr('id', 'ProductDetailList_' + index + '__MaterialName');
                    $(tr).find('.detail_quantity').attr('name', 'ProductDetailList[' + index + '].Quantity').attr('id', 'ProductDetailList_' + index + '__Quantity');
                });
            });

            $('#detailList').on('change', '.detail_quantity', function () {
                $(this).val($(this).val().replace(/\-/g, ''));
                $(this).val($(this).val().replace(/[^0-9.,]/g, ''));
                var ralVal = numeral($(this).val());
                if (ralVal <= 0) {
                    $(this).val(1);
                }
                var $this = $(this);
            });
        });
        //upload file image
        $(document).ready(function () {
            $('[type="file"]').change(function () {
                var fileInput = $(this);
                if (fileInput.length && fileInput[0].files && fileInput[0].files.length) {
                    var url = window.URL || window.webkitURL;
                    var image = new Image();
                    image.onerror = function () {
                        alert("File tải lên bắt buộc phải là hình ảnh (.png, .jpg, .jpeg,...)");
                        $("#imgAvt").attr("src", "/assets/css/images/noimage.gif");
                    };
                    image.src = url.createObjectURL(fileInput[0].files[0]);
                }
            });
        });
    </script>
    @Html.ScriptBottom_ValidationMvc()
    @Html.ScriptBottom_ChosenStyle()
}
