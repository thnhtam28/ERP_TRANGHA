@using Erp.BackOffice.App_GlobalResources
@using Erp.BackOffice.Sale.Models
@using Erp.BackOffice.Helpers
@using System.Globalization;
@model List<Sale_DetailTourOfStaffViewModel>
    @{
        ViewBag.Title = "Báo cáo tổng số lượng tour KTV";
        Layout = "~/Views/Shared/_PopupLayout.cshtml";
        Erp.BackOffice.Models.PageSetting pageSetting = new Erp.BackOffice.Models.PageSetting
        {
            ModuleName = "SaleReport",
            ActionName = "DetailTourOfStaff",
            PageTitle = ViewBag.Title,
            DisplaySearchPanel = false,
            IsPopup = true,
            DisplayBackButton = false,
        };
        string FullName = ViewBag.FullName;
        int index = 1;
    }

    @section HeadOfPage {
        <style type="text/css">
            .cell-center {
                text-align: center;
            }

            .tr-bold {
                font-weight: 700;
            }

            .ctl {
                position: relative;
                /*float: left;*/
                margin-right: 3px;
            }

                .ctl .error {
                    position: absolute;
                    background: #de2a2a;
                    left: 0px;
                    top: 28px;
                    padding: 2px 5px;
                    color: #fff;
                    z-index: 999;
                }

                    .ctl .error:before {
                        border-bottom: 7px solid #de2a2a;
                        border-left: 7px solid transparent;
                        border-right: 7px solid transparent;
                        left: 9px;
                        top: -6px;
                        content: "";
                        display: inline-block;
                        position: absolute;
                    }

            .icon-add {
                margin-top: 0px !important;
            }

            .combojax {
                display: inline-block;
                position: initial !important;
                float: none !important;
            }
        </style>

    }

    <div id="page_header" class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title">
                <i class="ace-icon fa fa-star orange"></i>
                @ViewBag.Title
            </h5>
            <div class="widget-toolbar">
                <a class="btn-search" href="#" data-action="collapse">
                    <i class="ace-icon fa fa-search blue"></i>
                </a>
                <a class="btn-setting"></a>
            </div>
        </div>

        <div class="widget-body" style="display: block;">
            <div class="widget-main">
                <div class="search-view form-inline" id="SaleReport">
                    <table>
                        <tr>
                            <td width="20%">
                                <label>
                                    Tên KTV
                                </label>
                            </td>
                            <td>
                                <span class="inline">
                                    @Html.TextBox("FullName", FullName, new { style = "width:120%", @readonly = "readonly" })
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                <label>
                                    Giai Đoạn
                                </label>
                            </td>
                            <td>
                                <span class="inline">
                                    <span class="input-group">
                                        @Html.TextBox("StartDate", (string)ViewBag.StartDate, new { @readonly = "readonly", placeholder = "Từ ngày" })
                                        <span class="input-group-addon ">
                                            <i class="fa fa-exchange"></i>
                                        </span>
                                        @Html.TextBox("EndDate", (string)ViewBag.EndDate, new { @readonly = "readonly", placeholder = "Đến ngày" })
                                    </span>
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive" id="CTietTourKTV" style="margin-bottom:40px">
        <table id="cTable" class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align:center">STT</th>
                    <th style="text-align:center">Dịch vụ</th>
                    <th style="text-align:center">Ngày</th>
                    <th style="text-align:center">Thời gian</th>
                    <th style="text-align:center">Thời lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="@(index % 2 == 0 ? " alert-warning" : "")">
                    <td class="text-center">
                        <span>@(index++)</span>
                    </td>
                    <td style="text-align:center">@item.ProductName</td>
                    <td style="text-align:center">@item.getCreatedDate</td>
                    <td style="text-align:center">@item.getPeriodOfTime</td>
                    <td style="text-align:center">@item.TotalDayHourMinute</td>
                </tr>
                }
            </tbody>
        </table>

    </div>
    @using (Html.BeginButtonContainer(pageSetting))
    {
        <button class="btn btn-white btn-success btn-sm" type="button" value="Export" onclick="GetPrint(true)">
            <i class="ace-icon fa fa-file-excel-o"></i>
            Xuất excel
        </button>
    }

    @section Scripts {
        <script>
            function GetPrint(type) {
                var StartDate = $('#StartDate').val();
                var EndDate = $('#EndDate').val();
                var UserId = @ViewBag.UserId
                var BranchId = $('#BranchId').val();
                OpenPopup('/SaleReport/PrintSale_DetailTourOfStaff?StartDate=' + StartDate + '&EndDate=' + EndDate + '&UserId=' + UserId + '&BranchId=' + BranchId + '&ExportExcel=' + type + '&IsPopup=true');
                HideLoading();
            }

        </script>
        @Html.ScriptBottom_ValidationMvc()
        @Html.ScriptBottom_DatePicker("dd/MM/yyyy")
        @Html.ScriptBottom_ChosenStyle()
    }
